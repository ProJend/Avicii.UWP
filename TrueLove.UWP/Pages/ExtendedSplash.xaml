<Page
    x:Class="TrueLove.UWP.Pages.ExtendedSplash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Page_Loaded"
    RequestedTheme="Dark"
    mc:Ignorable="d">

    <Grid>
        <Canvas>
            <Image x:Name="extendedSplashImage" Source="/Assets/SplashScreen.png" />
        </Canvas>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <StackPanel Margin="20" VerticalAlignment="Top">
                    <FontIcon
                        FontFamily="{ThemeResource ExtraIconfont}"
                        FontSize="60"
                        Glyph="&#xe644;" />
                    <TextBlock
                        x:Uid="eDoubleClickTip"
                        MaxWidth="120"
                        Margin="0,20,0,0"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="20" VerticalAlignment="Top">
                    <FontIcon
                        FontFamily="{ThemeResource ExtraIconfont}"
                        FontSize="60"
                        Glyph="&#xe646;" />
                    <TextBlock
                        x:Uid="eSlideTip"
                        MaxWidth="120"
                        Margin="0,20,0,0"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <StackPanel
            Margin="0,60"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom">
            <ProgressRing
                Name="loadingRing"
                Width="50"
                Height="50"
                Margin="20" />
            <TextBlock x:Uid="ePreparing" Style="{ThemeResource SubheaderTextBlockStyle}" />
            <TextBlock
                Name="prompt"
                x:Uid="eInternetWarning"
                Margin="5"
                Foreground="Orange"
                Opacity="0"
                Style="{ThemeResource BodyTextBlockStyle}" />
        </StackPanel>
    </Grid>
</Page>